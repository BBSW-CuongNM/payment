<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Hỗ trợ quản lý - Leading Star Viet Nam</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Syncfusion Essential JS 2 Styles -->
     <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
     <!-- Syncfusion Essential JS 2 Scripts -->
     <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto float-right">
                <li class="nav-item ml-auto">
                    <a asp-action="Index" asp-controller="Home" class="mx-2 py-0">
                        <img src="~/images/payment.jpg" alt="Cổng thanh toán" 
                             class="brand-image logo img-circle elevation-3" style="opacity: .8; height: 30px;">
                        <span class="text-dark mt-3" style="font-size: 16px;">Administrator</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-action="Index" asp-controller="Home" class="brand-link px-0">
                <img src="~/images/payment.jpg" alt="Cổng thanh toán" class="brand-image logo img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light h4">Payment</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar mt-2">
                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search"
                               style="font-size:20px"
                               placeholder="Tìm kiếm" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!--Quản lý danh mục-->
                        <li class="nav-item">
                            <a href="#" class="nav-link px-0">
                                <i class="nav-icon far fa-bookmark"></i>
                                <p class="h5">
                                    Danh mục
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="PaymentDestination" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Nơi thanh toán</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Partner" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Đối tác</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Currency" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Tiền tệ</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!--Dư liệu đơn và thành toán-->
                        <li class="nav-item">
                            <a href="#" class="nav-link px-0">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p class="h5">
                                    Thanh toán
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Order" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Đơn hàng</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Payment" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Thanh toán</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!--Phân quyền-->
                        <li class="nav-item">
                            <a href="#" class="nav-link px-0">
                                <i class="nav-icon fas fa-key"></i>
                                <p class="h5">
                                    Phân quyền
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="User" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Người dùng</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Role" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p class="h5">Quyền truy cập</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            <!-- /.sidebar-menu -->
            </div>
        <!-- /.sidebar -->
        </aside>

        <!--Main content-->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
              <b>Phiên bản</b> 2.0.0
            </div>
            <strong>Bản quyền &copy; @DateTime.Now.Year <a href="" style="color: forestgreen">cổng thanh toán</a>.</strong>
        </footer>
    </div>
    <ejs-scripts></ejs-scripts>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>